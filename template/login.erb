    <link rel="shortcut icon" href="assets/images/favicon.ico" />
  </head>
  <body>
    <div class="authentication-theme auth-style_1">

      <div class="row">
        <div class="col-lg-5 col-md-7 col-sm-9 col-11 mx-auto">
          <div class="grid">
            <div class="grid-body">
              <div class="row">
                <div class="col-lg-7 col-md-8 col-sm-9 col-12 mx-auto form-wrapper">
                  <form action="/login" method="post" >
                    <div class="form-group input-rounded" style="text-align: center">
                      <h3 style="font-weight: bold;color: black;font-size: xx-large">Trakya Obs</h3><br>
                    </div>

                    <div class="form-group input-rounded">
                      <input type="text" class="form-control" placeholder="kullanıcı adı" name="username" />
                    </div>
                    <div class="form-group input-rounded">
                      <input type="password" class="form-control" placeholder="parola" name="password" />
                    </div>
                    <div class="form-inline">
                      <div class="checkbox">
                        <label>
                          <input type="checkbox" class="form-check-input" />Beni hatırla <i class="input-frame"></i>
                        </label>
                      </div>
                    </div>
                    <%if @hata.length >0 %>
                    <div class="form-group input-rounded" style="text-align: center">
                      <h3 style="font-weight: bold;color: red;font-size:medium"><%=@hata %></h3><br>
                    </div>
                      <%end %>
                    <button type="submit" class="btn btn-primary btn-block"> Giriş yap </button>
                  </form>
                  <div class="signup-link">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--page body ends -->
