                  <p class="profile-name"><%=@admin[0][1] %> <%=@admin[0][2] %></p>
                  <p class="designation"><%=@admin[0][6] %></p>
                </div>
              </a>
            </li>

            <li class="nav-item nav-category"><span class="nav-link">ÖĞRENCİ</span></li>
            <li class="nav-item"style="background-color: transparent" >
              <a class="nav-link" href="/admin">
                <span class="menu-title">Tüm Öğrenciler</span>
                <i class="icon-people menu-icon"></i>
              </a>
            </li>

            <li class="nav-item active" >
              <a class="nav-link" href="/admin/ogrenci-ekle">
                <span class="menu-title">Öğrenci Ekle</span>
                <i class="icon-plus menu-icon"></i>
              </a>
            </li>

            <li class="nav-item nav-category"><span class="nav-link">DERS</span></li>
            <li class="nav-item" style="background-color: transparent">
              <a class="nav-link" href="/admin/tum-dersler">
                <span class="menu-title">Tüm Dersler</span>
                <i class="icon-book-open menu-icon"></i>
              </a>
            </li>
            <li class="nav-item" style="background-color: transparent">
              <a class="nav-link" href="/admin/ders-ekle">
                <span class="menu-title">Ders Ekle</span>
                <i class="icon-plus menu-icon"></i>
              </a>
            </li>

           </ul>
        </nav>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <!-- Quick Action Toolbar Starts-->

            <div class="row">
              <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="d-sm-flex align-items-center mb-4">
                      <h4 class="card-title mb-sm-0">Öğrenci Ekle</h4>
                    </div>
                    <div class="table-responsive border rounded p-1">

                        <form action="/admin/ogrenci-ekle" method="post" enctype="multipart/form-data">
                            <div class="row" style="width: 100%;margin: 15px">
                              <div class="col-lg-6">
                                <div class="for m-group">
                                  <label for="largeInput" style="font-weight: bold">İsim</label>
                                  <input type="text"  class="form-control form-control" id="isim" placeholder="isim" name="isim">
                                </div><br>


                                <div class="form-group">
                                  <label for="largeInput" style="font-weight: bold">Tc</label>
                                  <input type="number" class="form-control form-control" id="tc" placeholder="tc" name="tc">
                                </div>


                                <div class="form-group">
                                  <label for="largeInput" style="font-weight: bold">Şifre</label>
                                  <input type="text" class="form-control form-control" id="sifre" placeholder="sifre" name="password">
                                </div>

                                <div class="form-group">
                                  <label for="largeInput" style="font-weight: bold">Telefon</label><br>
                                  <input type="tel" class="form-control" id="tel" placeholder="tel" name="tel">
                                </div>

                                <div class="form-group">
                                  <label for="largeInput" style="font-weight: bold">Resim</label><br>
                                  <input type="file" class="form-control" id="file"  name="file">
                                </div>
                              </div>
                              <div class="col-lg-6">

                                <div class="for m-group">
                                  <label for="largeInput" style="font-weight: bold">Soyisim</label>
                                  <input type="text" class="form-control form-control" id="soyisim" placeholder="soyisim" name="soyisim">
                                </div><br>

                                <div class="form-group">
                                  <label for="largeInput" style="font-weight: bold">Email</label>
                                  <input type="email" class="form-control form-control" id="email" placeholder="email" name="email">
                                </div>

                                <div class="form-group">
                                  <label for="largeInput" style="font-weight: bold">Dönem</label>
                                  <input type="number" class="form-control form-control" id="donem" placeholder="dönem" name="donem">
                                </div>

                                <div class="form-group">
                                  <label for="largeInput" style="font-weight: bold">Okul no</label>
                                  <input type="number" class="form-control form-control" id="okulNo" placeholder="şifre" name="okulNo">
                                </div>

                              </div>
                            </div>
                            <div class="row justify-content-md-center" style="margin-bottom: 20px">

                              <input name="input_id" style="display: none">
                              <button type="submit" class="btn btn-danger" style="width: 150px;height: 40px;margin-left: 30px">Kaydet</button>
                            </div>
                        </form>
                      </div>
                  </div>
                </div>
              </div>
            </div>

          </div>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
          <!-- partial -->
        </div>

        <!-- main-panel ends -->
